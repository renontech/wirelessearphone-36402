<%= link_to '詳細ページへ戻る', item_path(@item1.id), class:'btn btn-outline-secondary ml-5' %>
<%= form_with url: ajax_item_path do |f| %>
<div class="compare-form justify-content-center mb-5" id="hideman">
  <div class="form-group">
    <%= f.collection_select(:num, @items, :id, :name, { include_blank: '選択してください'}, { class: 'form-control', id: "samplePulldown", required: true }) %>
  </div>
  <div class="form-group">
    <button type="button" class="btn"></button>
    <%= f.submit '実行', class: "btn btn-outline-primary" %>
  </div>
</div>
<% end %>

<div class="compare">
  <div class="item1">
    <div class='detail-info'>
      <%= image_tag @item1.image, class:'compare-photo' %>
      <div class='review-info'>
        <div class="average-score mb-3">
          <div class="star-rating ml-2 d-none">
            <div class="star-rating-front" style="width: <%= @item1.review_point_percentage %>">★★★★★</div>
            <div class="star-rating-back">★★★★★</div>
          </div>
          <div class="average-score-display ml-3 pt-2"><%= @item1.avg_point %>点(<%= @item1.reviews_number %>件のレビュー)</div>
        </div>
      </div>
      <table border='1', width='70%', class='table'>
        <tr><td>名前</td><td><%= @item1.name %></td></tr>
        <tr><td>価格</td><td>¥<%= @item1.price.to_s(:delimited) %></td></tr>
        <tr><td>メーカー</td><td><%= @item1.maker %></td></tr>
        <tr><td>ドライバー</td><td><%= @item1.driver %></td></tr>
        <tr><td>ノイキャン</td><td><%= @item1.anc %></td></tr>
        <tr><td>外音取り込み</td><td><%= @item1.ambient %></td></tr>
        <tr><td>Bluetoothバージョン</td><td><%= @item1.bluetooth %></td></tr>
        <tr><td>コーデック</td><td><%= @item1.codec %></td></tr>
        <tr><td>重量</td><td><%= @item1.weight %></td></tr>
        <tr><td>発売日</td><td><%= @item1.date %></td></tr>
      </table>
    </div>
  </div>
  <div class="item2 ml-3" id="item2">
  </div>
</div>
