<div class='top-page-body'>
  <%= form_with url: search_items_path, method: :get, local: true, class:"search-form" do |f| %>
    <%= f.text_field :keyword, placeholder: "イヤホンを検索する", class: "search-input" %>
    <%= f.submit "検索", class: "search-btn" %>
  <% end %>
  <% if user_signed_in? %>
    <div class='regis-item'>
      <%= link_to 'イヤホンを追加する', new_item_path, class:'link' %>
    </div>
  <% end %>
  <div class='items'>
    <% @items.each do |item| %>
      <%= link_to item_path(item.id), class:"item-link" do %>
        <div class='item'>
          <div class='item-image'>
            <%= image_tag item.image, class:"image_photo" if item.image.attached? %>
          </div>
          <div class='item-info'>
            <span class='item-maker'>
              <%= item.maker %>
            </span>
            <h2 class='item-name'>
              <%= item.name %>
            </h2>
            <%# 評価表示 %>
            <div class='review-info'>
              <div class="average-score mb-3">
                <div class="star-rating ml-2">
                  <div class="star-rating-front" style="width: <%= item.avg_score_percentage %>%">★★★★★</div>
                  <div class="star-rating-back">★★★★★</div>
                </div>
                <div class="average-score-display">
                  （<%= item.avg_score %>点）
                </div>
              </div>
              <div class='review-quantity'>　(<%= item.reviews_number %>人)</div>
            </div>
            <%# /評価表示 %>
            <div class='item-price'>
              ¥<%= item.price.to_s(:delimited) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

