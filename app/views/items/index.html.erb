<%= render 'shared/header' %>

<div class='top-page-body'>
  <% if user_signed_in? %>
    <div class='regis-item'>
      <%= link_to 'イヤホンを追加する', new_item_path, class:'link' %>
    </div>
  <% end %>
  <%= notice %>
  <%# イヤホン一覧 %>
  <div class='items'>
    <% @items.each do |item| %>
      <%= link_to item_path(item.id), class:"item-link" do %>
        <div class='item'>
          <div class='item-image'>
            <%= image_tag item.image, class:"image_photo" if item.image.attached? %>
          </div>
          <div class='item-info'>
            <span class='item-maker'>
              <%= item.maker %>
            </span>
            <h2 class='item-name'>
              <%= item.name %>
            </h2>
            <div class='review-info'>
              <div class='review-point-average'>評価平均点数(pt)</div>
              <div class='review-quantity'>　(評価数(人))</div>
            </div>
            <div class='item-price'>
              ¥<%= item.price.to_s(:delimited) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%# /イヤホン一覧 %>
</div>

<footer class='top-page-footer'>
</footer>