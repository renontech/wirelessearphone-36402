<body class='top-page-body'>
  <header class='top-page-header'>
    <h1 class='top-logo'>Wireless.com</h1>
    <div class='sign-btn'>
    <% if user_signed_in? %>
      <%= current_user.nickname %>/
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to '新規登録', new_user_registration_path %>/
      <%= link_to 'ログイン', new_user_session_path %>
    <% end %>
    </div>
  </header>

  <div class='items'>
    <% @items.each do |item| %>
      <div class='item'>
        <div class='item-image'>
          <%= image_tag("wf1000xm4.jpg", class:"image_photo") %>
        </div>
        <div class='item-info'>
          <span class='item-maker'>
            <%= item.maker %>
          </span>
          <h2 class='item-name'>
            <%= item.name %>
          </h2>
          <div class='review-info'>
            <div class='review-point-average'>4.9pt</div>
            <div class='review-quantity'>(107人)</div>
          </div>
          <div class='item-price'>
            <%= item.price.to_s(:delimited) %>円
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <footer class='top-page-footer'>
  </footer>
</body>
