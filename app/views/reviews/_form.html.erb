<p class="text-center border rounded is-size-4 mb-3 mt-3">レビューを投稿する</p>
<div class="rating-box mt-3">
  <%= form_with model: review, url: item_reviews_path(item), local: true do |f| %>
  <%= render 'shared/error_messages', model:f.object %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display">
        <span id="rating-value-display">0</span>/5
      </div>
    </div>
    <%= f.hidden_field :item_id, value: item.id %>
    <%= f.hidden_field :point, id: "rating-value" %>
    <%= f.text_field :title, class:'form-control w-50 mb-2', placeholder:'タイトルを記入してください' %>
    <%= f.text_field :text, class: "textarea" %>
    <%= f.submit "投稿", class: "button mt-3" %>
    <%= link_to "他のレビューを見る", item_path(item, anchor: 'reviews'), class: "button light ml-3 mt-3" %>
  <% end %>
</div>

<%= javascript_include_tag 'reviews.js' %>