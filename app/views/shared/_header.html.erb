<header class='top-page-header'>
  <h1 class='top-logo'>
    <%= link_to 'Wireless.com', root_path, class:'logo-link' %></h1>
  <div class='sign-btn'>
  <% if user_signed_in? %>
    <%= current_user.nickname %>/
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
